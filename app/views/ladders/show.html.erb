      <tr>
      <td><%= roster.rosterName %></td>
      <td><%= player.name %></td>
      <td><%= player.teacher %></td>
      <td><%= player.grade %></td>
      <td><%= player.rank %></td>
      <td><%= player.wins %></td>
      <td><%= player.losses %></td>
      <td><%= link_to 'Edit', roster_player_edit2_path(roster, player) %></td>
